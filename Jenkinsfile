node
{
  stage('Build')
  {
    echo 'Build stage'
    echo "Path Env variable is set to: '$env.PATH'"
    echo "Build id for this Jenkins job is '$env.BUILD_ID'"
    echo "And running on Jenkins machine: '$env.JENKINS_URL'"
  }
  stage('Test')
  {
    echo 'Test stage'
  }
  stage('Deploy')
  {
    echo 'Publish stage'
  }
}
